{% extends 'base.html.twig' %}

{% block title %}Hello FichierController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    {{ form_start(form) }}
    <div class="container">
        {{form_label(form.nom,'Nom',{'label_attr':{'class':'fw-bold'}})}}
        {{form_widget(form.nom,{'attr':{'class':'form-control' , 'placeholder':'le nom'}})}}

        {{form_label(form.utilisateur,'Utilisateur',{'label_attr':{'class':'fw-bold'}})}}
        {{form_widget(form.utilisateur,{'attr':{'class':'form-control' , 'placeholder':'utilisateur'}})}}

        {{form_label(form.theme,'sujet',{'label_attr':{'class':'fw-bold'}})}}
        {{form_widget(form.theme,{'attr':{'class':'form-control' , 'placeholder':'theme'}})}}
        <br>
    </div>
{{ form_end(form,{render_rest:true})}}
</div>
{% endblock %}
