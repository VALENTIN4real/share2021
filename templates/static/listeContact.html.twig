{% extends 'base.html.twig' %}

{% block title %}{{parent()}} Commentaire{% endblock %}

{% block body %}

<h1 class="text-primary text-center">Liste des contacts</h1>

    <div class="table-responsive">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th scope="col">Nom</th>
                </tr>
            </thead>
            
            <tbody>
            {% for contact in contacts %} 
            <tr class="{{ cycle(['table-primary','table-secondary'],loop.index0)}}">
                <td>{{ contact.nom | capitalize }}</td>
                <td>{{ contact.email | capitalize }}</td>
                <td>{{ contact.message | capitalize }}</td>
            </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

{% endblock %}