{% block title %}{{parent()}} Contact{% endblock %}

{% block body %}

<h1 class="text-primary text-center">Bienvenue sur SHARE-Contact âœ… je suis un chien</h1>


{{ form_start(form) }}
    <div class="container">
        {{form_label(form.nom,'Nom',{'label_attr':{'class':'fw-bold'}})}}
        {{form_widget(form.nom,{'attr':{'class':'form-control' , 'placeholder':'le nom'}})}}

